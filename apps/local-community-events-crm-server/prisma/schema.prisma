datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt     DateTime          @default(now())
  email         String?
  id            String            @id @default(cuid())
  notifications Notification[]
  password      String?
  preferences   Preference[]
  role          EnumUserRole?
  tempRole      String?
  updatedAt     DateTime          @updatedAt
  username      String?
  userRole      EnumUserUserRole?
}

model Event {
  category          String?
  createdAt         DateTime                   @default(now())
  date              DateTime?
  description       String?
  eventCategories   EnumEventEventCategories[]
  id                String                     @id @default(cuid())
  location          String?
  notifications     Notification[]
  numberOfSeats     Int?
  oldCategory       String?
  tempCategory      String?
  temporaryCategory String?
  title             String?
  updatedAt         DateTime                   @updatedAt
}

model Notification {
  createdAt        DateTime  @default(now())
  event            Event?    @relation(fields: [eventId], references: [id])
  eventId          String?
  id               String    @id @default(cuid())
  notificationDate DateTime?
  updatedAt        DateTime  @updatedAt
  user             User?     @relation(fields: [userId], references: [id])
  userId           String?
}

model Preference {
  category  String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

enum EnumUserRole {
  Option1
}

enum EnumUserUserRole {
  Option1
}

enum EnumEventEventCategories {
  Option1
}
